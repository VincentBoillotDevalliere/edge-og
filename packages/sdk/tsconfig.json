{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
  "types": ["vitest"]
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules", "test"]
}
